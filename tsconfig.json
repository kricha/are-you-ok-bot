{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "module": "esnext",
    "target": "es2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules", ".eslintcache"]
}